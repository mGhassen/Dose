{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["esnext", "dom"],
    "types": [],
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@kit/lib": ["../lib/src/index.ts"],
      "@kit/lib/*": ["../lib/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}

