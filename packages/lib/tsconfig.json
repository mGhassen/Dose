{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["esnext", "dom"],
    "types": [],
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}

