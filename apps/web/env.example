# SmartLogBook Console Environment Variables
# Copy these variables to your .env.local file for development

# =============================================================================
# CORE APPLICATION CONFIGURATION
# =============================================================================

# Application Identity
NEXT_PUBLIC_PRODUCT_NAME=SmartLogBook
NEXT_PUBLIC_SITE_TITLE=SmartLogBook Console
NEXT_PUBLIC_SITE_DESCRIPTION=Railway maintenance management console

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_DEFAULT_THEME_MODE=system

# Theme Configuration
NEXT_PUBLIC_THEME_COLOR=#0f172a
NEXT_PUBLIC_THEME_COLOR_DARK=#f1f5f9

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API Base URL (used in production, development uses local API routes)
NEXT_PUBLIC_API_URL=http://localhost:5000

# =============================================================================
# ENVIRONMENT & DEPLOYMENT
# =============================================================================

NODE_ENV=development
NEXT_PUBLIC_ENV=development


# =============================================================================
# FEATURE FLAGS
# =============================================================================

NEXT_PUBLIC_ENABLE_MANAGE_LINKS=false

# =============================================================================
# MSW CONFIGURATION
# =============================================================================
# Global MSW master switch - controls whether MSW starts at all
# Set to false to completely disable MSW (all functionalities use real API)
# Set to true (or omit) to enable MSW, then use migration configs below

NEXT_PUBLIC_ENABLE_MSW=true

# =============================================================================
# MIGRATION CONFIGURATION (Per-Functionality MSW vs Real API)
# =============================================================================
# Only applies when NEXT_PUBLIC_ENABLE_MSW=true
# For each functionality set BOTH variables to true to use the real API
#   - MIGRATION_USE_API_<FUNCTIONALITY> (server-side)
#   - NEXT_PUBLIC_MIGRATION_USE_API_<FUNCTIONALITY> (client/MSW)

# Core entities (ALL fully migrated)
MIGRATION_USE_API_EVENTS=true
NEXT_PUBLIC_MIGRATION_USE_API_EVENTS=true

MIGRATION_USE_API_USERS=true
NEXT_PUBLIC_MIGRATION_USE_API_USERS=true

MIGRATION_USE_API_ACTIONTYPES=true
NEXT_PUBLIC_MIGRATION_USE_API_ACTIONTYPES=true

MIGRATION_USE_API_ACTIONREFTYPES=true
NEXT_PUBLIC_MIGRATION_USE_API_ACTIONREFTYPES=true

MIGRATION_USE_API_ACTIONREFERENCES=true
NEXT_PUBLIC_MIGRATION_USE_API_ACTIONREFERENCES=true

MIGRATION_USE_API_ACTIONS=true
NEXT_PUBLIC_MIGRATION_USE_API_ACTIONS=true

MIGRATION_USE_API_ACTS=true
NEXT_PUBLIC_MIGRATION_USE_API_ACTS=true

# MIGRATION_USE_API_CHECKLISTS=true
