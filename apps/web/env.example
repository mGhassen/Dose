# SmartLogBook Console Environment Variables
# Copy these variables to your .env.local file for development

# =============================================================================
# CORE APPLICATION CONFIGURATION
# =============================================================================

# Application Identity
NEXT_PUBLIC_PRODUCT_NAME=SmartLogBook
NEXT_PUBLIC_SITE_TITLE=SmartLogBook Console
NEXT_PUBLIC_SITE_DESCRIPTION=Railway maintenance management console

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_DEFAULT_THEME_MODE=system

# Theme Configuration
NEXT_PUBLIC_THEME_COLOR=#0f172a
NEXT_PUBLIC_THEME_COLOR_DARK=#f1f5f9

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API Base URL (used in production, development uses local API routes)
NEXT_PUBLIC_API_URL=http://localhost:5000

# =============================================================================
# ENVIRONMENT & DEPLOYMENT
# =============================================================================

NODE_ENV=development
NEXT_PUBLIC_ENV=development


# =============================================================================
# FEATURE FLAGS
# =============================================================================

NEXT_PUBLIC_ENABLE_MANAGE_LINKS=false

# =============================================================================
# MSW CONFIGURATION
# =============================================================================
# Global MSW master switch - controls whether MSW starts at all
# Set to false to completely disable MSW (all functionalities use real API)
# Set to true (or omit) to enable MSW, then use migration configs below

NEXT_PUBLIC_ENABLE_MSW=true

# =============================================================================
# SQUARE INTEGRATION
# =============================================================================
# Square POS Integration Configuration
# Get these from: https://developer.squareup.com/apps

# Your Square Application ID (from Square Developer Dashboard)
SQUARE_APPLICATION_ID=

# Your Square Application Secret (from Square Developer Dashboard)
SQUARE_APPLICATION_SECRET=

# OAuth Redirect URI (must match the one configured in Square Dashboard)
# For local development: http://localhost:3000/api/integrations/oauth/square/callback
# For production: https://yourdomain.com/api/integrations/oauth/square/callback
SQUARE_REDIRECT_URI=http://localhost:3000/api/integrations/oauth/square/callback

# Use Square Sandbox for testing (set to 'true' for sandbox, 'false' or omit for production)
# When using sandbox, you must:
# 1. Create a sandbox test account in Square Developer Console
# 2. Authorize the test account in your app's OAuth settings
# 3. Open the sandbox dashboard before initiating OAuth
SQUARE_USE_SANDBOX=false
